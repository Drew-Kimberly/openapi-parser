{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 2,
        "indentStyle": "space",
        "ignore": ["dist/**/*", "**/*.js"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "performance": {
                "noDelete": "warn"
            },
            "complexity": {
                "noForEach": "off"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            }
        },
        "ignore": ["dist/**/*", "**/*.js"]
    },
    "json": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 4
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single",
            "bracketSameLine": false
        }
    }
}
